{
  "name": "africa-waste-solutions-mobile",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.addplux.wastesolutions",
    "productName": "Africa Waste Solutions",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "assets/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "npx expo export --platform web",
    "build:windows": "npm run build:web && node fix-paths.js && electron-builder --win"
  },
  "dependencies": {
    "@expo/metro-runtime": "~3.2.3",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-picker/picker": "2.7.5",
    "axios": "1.6.0",
    "expo": "~51.0.0",
    "expo-camera": "~15.0.0",
    "expo-constants": "~16.0.0",
    "expo-image-picker": "~15.0.0",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "~6.3.0",
    "expo-router": "~3.5.0",
    "expo-secure-store": "~13.0.0",
    "expo-status-bar": "~1.12.0",
    "expo-updates": "~0.25.28",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-paper": "5.12.0",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  },
  "private": true
}