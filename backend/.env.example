# Database Configuration (Railway provides this automatically)
POSTGRES_DSN=postgresql://user:password@host:5432/dbname?sslmode=require

# JWT Secret Key (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# MinIO Configuration (optional - can use Railway's built-in storage or external S3)
MINIO_ENDPOINT=minio-host:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=kyc-docs
MINIO_USE_SSL=true

# AI Service URL (will be your Railway AI service URL)
AI_SERVICE_URL=https://your-ai-service.railway.app

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:5173

# Environment
ENVIRONMENT=production
PORT=8080
